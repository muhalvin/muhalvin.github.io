---
import Layout from "../layouts/Layout.astro";
import portfolio from "../data/portfolio.json";
---

<Layout title="Muhammad Alvin | Web Developer">
    <div class="flex flex-col justify-center items-center min-h-screen bg-gradient-to-br from-[#1E222A] to-[#282C34] p-4">
        <div class="relative w-full max-w-[1380px] h-[90vh] max-h-[800px] flex flex-col shadow-2xl rounded-lg overflow-hidden">

            <div class="flex items-center bg-[#282C34] px-4 py-3 rounded-t-lg border border-[#3E4451] shadow-md">
                <div class="flex space-x-2 mr-4">
                    <div class="w-3 h-3 rounded-full bg-[#E06C75]"></div>
                    <div class="w-3 h-3 rounded-full bg-[#E5C07B]"></div>
                    <div class="w-3 h-3 rounded-full bg-[#98C379]"></div>
                </div>
                <span class="text-[#D8DEE9] text-sm font-medium tracking-wide">Muhammad Alvin - Portfolio</span>
            </div>

            <div id="portfolio-container" class="flex-1 overflow-hidden bg-[#2E3440] rounded-b-lg border border-[#434C5E] border-t-0 shadow-xl group">
                <pre id="portfolio-text" class="h-full p-6 text-[#ECEFF4] text-sm md:text-base font-mono whitespace-pre-wrap break-words overflow-x-hidden scrollbar-thin scrollbar-track-[#2E3440] scrollbar-thumb-[#4C566A] transition-all duration-300 opacity-0 animate-fade-in">
{JSON.stringify(portfolio, null, 4)}
                </pre>
            </div>
        </div>
    </div>

    <style is:global>
        .scrollbar-thin::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        .scrollbar-thin::-webkit-scrollbar-track {
            background: transparent;
            border-radius: 4px;
        }
        .scrollbar-thin::-webkit-scrollbar-thumb {
            border-radius: 4px;
            background-color: #4C566A;
            transition: background-color 0.3s ease;
        }
        .scrollbar-thin:hover::-webkit-scrollbar-thumb {
            background-color: #5E81AC;
        }

        pre {
            white-space: pre-wrap;
            word-wrap: break-word;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .animate-fade-in {
            animation: fadeIn 0.6s ease-in-out forwards;
        }
    </style>
</Layout>

		<script>
		  	window.dataLayer = window.dataLayer || [];
		  	function gtag(){dataLayer.push(arguments);}
		  	gtag('js', new Date());
			
		  	gtag('config', 'G-W3Z8YVXZW3');
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>